generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum OrganizationType {
  HOSPITAL_PUBLIC // Hôpital public
  HOSPITAL_PRIVATE // Hôpital privé
  CLINIC // Clinique
  HEALTH_CENTER // Centre de santé
  DISPENSARY // Dispensaire
  MINISTRY // Ministère de la Santé
  NGO // ONG (Croix-Rouge, MSF, etc.)
  FOUNDATION // Fondation
  RESEARCH_CENTER // Centre de recherche
}

enum OrganizationStatus {
  PENDING // En attente de validation
  ACTIVE // Actif
  INACTIVE // Inactif
  SUSPENDED // Suspendu
  DELETED // Supprimé (soft delete)
}

enum Gender {
  MALE
  FEMALE
}

enum AnnouncementStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  DELETED
  SUSPENDED
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  DELETED
  SUSPENDED
}

enum AdviceStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  DELETED
}

enum CommentStatus {
  VISIBLE
  HIDDEN
  DELETED
  REPORTED
}

enum ReactionType {
  LIKE
  LOVE
  HELPFUL
  THANKS
}

enum ContentType {
  ANNOUNCEMENT
  ARTICLE
  ADVICE
  COMMENT
  ORGANIZATION
  PROFILE
  COVER
}

enum TargetAudience {
  CHILDREN
  INFANTS
  ADULTS
  ELDERLY
  PREGNANT_WOMEN
  ALL
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum NotificationType {
  NEW_ANNOUNCEMENT
  NEW_ARTICLE
  COMMENT_REPLY
  ANNOUNCEMENT_REMINDER
  REGISTRATION_CONFIRMED
  SYSTEM
}

enum DeliveryStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
}

enum AdminRole {
  SUPER_ADMIN // Tous les droits
  MODERATOR // Modération de contenu
  SUPPORT // Support utilisateurs
  ANALYST // Consultation des statistiques
  VALIDATOR // Validation des hôpitaux/ONG
}

enum AdminStatus {
  ACTIVE
  INACTIVE
  DELETED
}

enum AdminPermissionAction {
  // Gestion des organisations
  VALIDATE_ORGANIZATION
  SUSPEND_ORGANIZATION
  DELETE_ORGANIZATION
  VIEW_ORGANIZATIONS
  EXPORT_ORGANIZATIONS

  // Gestion des utilisateurs
  VIEW_USERS
  SUSPEND_USER
  DELETE_USER
  EXPORT_USERS

  // Modération de contenu
  MODERATE_ANNOUNCEMENT
  MODERATE_ARTICLE
  MODERATE_COMMENT
  DELETE_CONTENT

  // Gestion des signalements
  VIEW_REPORTS
  RESOLVE_REPORTS

  // Gestion des catégories et spécialités
  MANAGE_CATEGORIES
  MANAGE_SPECIALTIES

  // Audit et statistiques
  VIEW_AUDIT_LOGS
  EXPORT_AUDIT_LOGS
  VIEW_STATISTICS
  EXPORT_DATA

  // Administration système
  MANAGE_ADMINS
  MANAGE_PERMISSIONS
  SYSTEM_SETTINGS
}

enum AdminPermissionResource {
  ORGANIZATION
  USER
  ANNOUNCEMENT
  ARTICLE
  ADVICE
  COMMENT
  REPORT
  CATEGORY
  SPECIALTY
  AUDIT_LOG
  STATISTICS
  ADMIN
  SYSTEM
}

enum ActorType {
  USER
  ORGANIZATION
  ADMINISTRATOR
  SYSTEM
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  SUSPEND
  ACTIVATE
  VERIFY
  PUBLISH
  UNPUBLISH
  HIDE
  UNHIDE
  REGISTER_TO_ANNOUNCEMENT
}

enum ResourceType {
  USER
  ORGANIZATION
  ANNOUNCEMENT
  ARTICLE
  ADVICE
  COMMENT
  MEDIA
  CATEGORY
  REGISTRATION
}

enum AuditStatus {
  SUCCESS
  FAILURE
}

enum ReportReason {
  SPAM
  INAPPROPRIATE
  FALSE_INFO
  HARASSMENT
  OTHER
}

enum ReportStatus {
  PENDING
  UNDER_REVIEW
  RESOLVED
  REJECTED
}

enum DeviceType {
  WEB
  ANDROID
  IOS
}

enum UserType {
  USER
  ORGANIZATION
  ADMINISTRATOR
}

enum MediaStatus {
  ACTIVE
  DELETED
}

enum PermissionAction {
  CREATE
  READ
  UPDATE
  DELETE
  PUBLISH
  UNPUBLISH
  MODERATE
  MANAGE_USERS
  VIEW_STATISTICS
  EXPORT_DATA
}

enum PermissionResource {
  ANNOUNCEMENT
  ARTICLE
  ADVICE
  COMMENT
  MEDIA
  USER
  ORGANIZATION
  CATEGORY
  SPECIALTY
  REPORT
  AUDIT_LOG
}

enum RegistrationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  ATTENDED
}

// ============================================
// MODELS
// ============================================

model User {
  id                     String     @id @default(uuid())
  email                  String     @unique
  password               String
  firstName              String?
  lastName               String?
  phone                  String?    @unique
  avatar                 String?
  dateOfBirth            DateTime?
  gender                 Gender?
  city                   String?
  region                 String?
  isEmailVerified        Boolean    @default(false)
  isPhoneVerified        Boolean    @default(false)
  emailVerificationToken String?
  phoneVerificationToken String?
  passwordResetToken     String?
  passwordResetExpires   DateTime?
  fcmTokens              String[]   @default([])
  lastLoginAt            DateTime?
  lastLoginIp            String?
  status                 UserStatus @default(ACTIVE)
  deletedAt              DateTime?
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt

  // Relations
  comments      Comment[]
  reactions     Reaction[]
  bookmarks     Bookmark[]
  notifications Notification[]
  reports       Report[]
  sessions      Session[]
  preference    UserPreference?
  registrations AnnouncementRegistration[] // NOUVEAU

  @@map("users")
}

model Organization {
  id                 String             @id @default(uuid())
  name               String
  email              String             @unique
  password           String
  type               OrganizationType // AJUSTÉ
  phone              String
  whatsapp           String?
  logo               String?
  coverImage         String?
  description        String?            @db.Text
  website            String?
  address            String
  city               String
  region             String
  latitude           Decimal?           @db.Decimal(10, 8)
  longitude          Decimal?           @db.Decimal(11, 8)
  registrationNumber String             @unique
  licenseDocument    String? // Document d'agrément (PDF)
  isVerified         Boolean            @default(false)
  verifiedAt         DateTime?
  verifiedBy         String?
  openingHours       Json?
  emergencyAvailable Boolean            @default(false)
  insuranceAccepted  String[]           @default([])
  rating             Decimal?           @db.Decimal(2, 1)
  totalReviews       Int                @default(0)
  totalAnnouncements Int                @default(0)
  totalArticles      Int                @default(0)
  fcmTokens          String[]           @default([])
  lastLoginAt        DateTime?
  lastLoginIp        String?
  status             OrganizationStatus @default(PENDING)
  suspensionReason   String?            @db.Text
  suspendedAt        DateTime?
  suspendedBy        String?
  deletedAt          DateTime?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  // Relations
  announcements    Announcement[]
  articles         Article[]
  advices          Advice[]
  services         OrganizationService[]
  media            Media[]
  sessions         Session[]
  verifier         Administrator?           @relation("OrganizationVerifier", fields: [verifiedBy], references: [id])
  suspender        Administrator?           @relation("OrganizationSuspender", fields: [suspendedBy], references: [id])
  notificationLogs NotificationLog[]
  permissions      OrganizationPermission[] // NOUVEAU
  members          OrganizationMember[] // NOUVEAU

  @@map("organizations")
}

// NOUVEAU : Gestion des membres d'une organisation
model OrganizationMember {
  id             String   @id @default(uuid())
  organizationId String
  firstName      String
  lastName       String
  email          String
  phone          String?
  position       String? // Poste (ex: Directeur, Médecin-chef)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, email])
  @@map("organization_members")
}

// NOUVEAU : Système de permissions par organisation
model OrganizationPermission {
  id             String             @id @default(uuid())
  organizationId String
  resource       PermissionResource
  actions        PermissionAction[]
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, resource])
  @@map("organization_permissions")
}

model Administrator {
  id          String      @id @default(uuid())
  email       String      @unique
  password    String
  firstName   String
  lastName    String
  phone       String?
  avatar      String?
  role        AdminRole   @default(MODERATOR)
  isActive    Boolean     @default(true)
  lastLoginAt DateTime?
  lastLoginIp String?
  createdBy   String?
  status      AdminStatus @default(ACTIVE)
  deletedAt   DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  creator                Administrator?            @relation("AdminCreator", fields: [createdBy], references: [id])
  createdAdmins          Administrator[]           @relation("AdminCreator")
  verifiedOrganizations  Organization[]            @relation("OrganizationVerifier")
  suspendedOrganizations Organization[]            @relation("OrganizationSuspender")
  reviewedReports        Report[]
  sessions               Session[]
  permissions            AdministratorPermission[] // NOUVEAU : Permissions granulaires

  @@map("administrators")
}

// NOUVEAU : Table de permissions pour les administrateurs
model AdministratorPermission {
  id              String                  @id @default(uuid())
  administratorId String
  resource        AdminPermissionResource
  actions         AdminPermissionAction[]
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  // Relations
  administrator Administrator @relation(fields: [administratorId], references: [id], onDelete: Cascade)

  @@unique([administratorId, resource])
  @@map("administrator_permissions")
}

// NOUVEAU : Modèle pour les rôles prédéfinis (templates de permissions)
model AdminRoleTemplate {
  id          String    @id @default(uuid())
  role        AdminRole @unique
  name        String // Ex: "Super Administrateur"
  description String    @db.Text
  permissions Json // Structure { resource: [actions] }
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("admin_role_templates")
}

model Category {
  id                 String   @id @default(uuid())
  name               String   @unique
  slug               String?  @unique
  description        String?  @db.Text
  icon               String?
  color              String?
  parentId           String?
  order              Int      @default(0)
  isActive           Boolean  @default(true)
  announcementsCount Int      @default(0)
  articlesCount      Int      @default(0)
  advicesCount       Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  parent        Category?      @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children      Category[]     @relation("CategoryHierarchy")
  announcements Announcement[]
  articles      Article[]
  advices       Advice[]

  @@map("categories")
}

model Specialty {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String?  @unique
  description String?  @db.Text
  icon        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  services OrganizationService[]

  @@map("specialties")
}

model OrganizationService {
  id                  String   @id @default(uuid())
  organizationId      String
  specialtyId         String
  name                String
  description         String?  @db.Text
  isAvailable         Boolean  @default(true)
  estimatedCost       String?
  duration            String?
  requiresAppointment Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  specialty    Specialty    @relation(fields: [specialtyId], references: [id])

  @@map("organization_services")
}

model Announcement {
  id                   String             @id @default(uuid())
  organizationId       String
  categoryId           String
  title                String
  slug                 String?            @unique
  content              String             @db.Text
  excerpt              String?
  featuredImage        String
  thumbnailImage       String?
  startDate            DateTime
  endDate              DateTime
  targetAudience       TargetAudience[]
  isFree               Boolean            @default(true)
  cost                 Decimal?           @db.Decimal(10, 2)
  capacity             Int? // NOUVEAU : Nombre de places disponibles
  registeredCount      Int                @default(0) // NOUVEAU : Compteur d'inscriptions
  requiresRegistration Boolean            @default(false) // NOUVEAU
  viewsCount           Int                @default(0)
  sharesCount          Int                @default(0)
  commentsCount        Int                @default(0)
  reactionsCount       Int                @default(0)
  notificationsSent    Int                @default(0)
  isPinned             Boolean            @default(false)
  publishedAt          DateTime?
  status               AnnouncementStatus @default(DRAFT)
  suspensionReason     String?            @db.Text
  suspendedBy          String?
  deletedAt            DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  // Relations
  organization     Organization               @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  category         Category                   @relation(fields: [categoryId], references: [id])
  location         Location?
  comments         Comment[]
  reactions        Reaction[]
  bookmarks        Bookmark[]
  media            Media[]
  views            AnnouncementView[]
  statistics       Statistic[]
  notificationLogs NotificationLog[]
  registrations    AnnouncementRegistration[] // NOUVEAU

  @@map("announcements")
}

// NOUVEAU : Gestion des inscriptions aux annonces
model AnnouncementRegistration {
  id             String  @id @default(uuid())
  announcementId String
  userId         String? // NULL si visiteur non connecté

  // Infos du visiteur non connecté
  visitorName  String?
  visitorPhone String?
  visitorEmail String?

  status             RegistrationStatus @default(PENDING)
  confirmedAt        DateTime?
  cancelledAt        DateTime?
  cancellationReason String?            @db.Text
  attendedAt         DateTime? // Date de présence effective
  notes              String?            @db.Text
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  // Relations
  announcement Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([announcementId, userId])
  @@unique([announcementId, visitorPhone])
  @@map("announcement_registrations")
}

model Article {
  id               String        @id @default(uuid())
  organizationId   String
  categoryId       String
  title            String
  slug             String?       @unique
  content          String        @db.Text
  excerpt          String?
  featuredImage    String
  thumbnailImage   String?
  author           String?
  readingTime      Int?
  tags             String[]      @default([])
  viewsCount       Int           @default(0)
  sharesCount      Int           @default(0)
  commentsCount    Int           @default(0)
  reactionsCount   Int           @default(0)
  isFeatured       Boolean       @default(false)
  publishedAt      DateTime?
  status           ArticleStatus @default(DRAFT)
  suspensionReason String?       @db.Text
  suspendedBy      String?
  deletedAt        DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  organization     Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  category         Category          @relation(fields: [categoryId], references: [id])
  comments         Comment[]
  reactions        Reaction[]
  bookmarks        Bookmark[]
  media            Media[]
  statistics       Statistic[]
  notificationLogs NotificationLog[]

  @@map("articles")
}

model Advice {
  id             String           @id @default(uuid())
  organizationId String
  categoryId     String
  title          String
  content        String           @db.Text
  icon           String?
  priority       Priority         @default(MEDIUM)
  targetAudience TargetAudience[]
  viewsCount     Int              @default(0)
  sharesCount    Int              @default(0)
  isActive       Boolean          @default(true)
  publishedAt    DateTime?
  status         AdviceStatus     @default(DRAFT)
  deletedAt      DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  category     Category     @relation(fields: [categoryId], references: [id])
  reactions    Reaction[]

  @@map("advices")
}

model Comment {
  id              String        @id @default(uuid())
  userId          String
  contentType     ContentType
  contentId       String
  parentCommentId String?
  content         String        @db.Text
  reactionsCount  Int           @default(0)
  repliesCount    Int           @default(0)
  isEdited        Boolean       @default(false)
  editedAt        DateTime?
  status          CommentStatus @default(VISIBLE)
  hiddenBy        String?
  hiddenReason    String?       @db.Text
  deletedAt       DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentComment  Comment?      @relation("CommentReplies", fields: [parentCommentId], references: [id])
  replies        Comment[]     @relation("CommentReplies")
  reactions      Reaction[]
  announcement   Announcement? @relation(fields: [announcementId], references: [id])
  announcementId String?
  article        Article?      @relation(fields: [articleId], references: [id])
  articleId      String?

  @@index([contentType, contentId])
  @@map("comments")
}

model Reaction {
  id          String       @id @default(uuid())
  userId      String
  contentType ContentType
  contentId   String
  type        ReactionType @default(LIKE)
  createdAt   DateTime     @default(now())

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  announcement Announcement? @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_reaction_announcement")
  article      Article?      @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_reaction_article")
  advice       Advice?       @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_reaction_advice")
  comment      Comment?      @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_reaction_comment")

  @@unique([userId, contentType, contentId])
  @@index([contentType, contentId])
  @@map("reactions")
}

model Location {
  id               String      @id @default(uuid())
  contentType      ContentType
  contentId        String      @unique
  address          String
  city             String
  region           String
  latitude         Decimal     @db.Decimal(10, 8)
  longitude        Decimal     @db.Decimal(11, 8)
  placeId          String?
  formattedAddress String?
  additionalInfo   String?     @db.Text
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // Relations
  announcement Announcement? @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@map("locations")
}

model Media {
  id                 String      @id @default(uuid())
  uploadedBy         String
  contentType        ContentType
  contentId          String?
  fileName           String
  originalFileName   String
  mimeType           String
  fileSize           Int
  url                String
  thumbnailUrl       String?
  width              Int?
  height             Int?
  cloudinaryPublicId String
  status             MediaStatus @default(ACTIVE)
  deletedAt          DateTime?
  createdAt          DateTime    @default(now())

  // Relations
  organization Organization  @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
  announcement Announcement? @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_media_announcement")
  article      Article?      @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_media_article")

  @@map("media")
}

model UserPreference {
  id                   String   @id @default(uuid())
  userId               String   @unique
  categories           String[] @default([])
  organizations        String[] @default([])
  cities               String[] @default([])
  regions              String[] @default([])
  notificationsEnabled Boolean  @default(true)
  emailNotifications   Boolean  @default(true)
  pushNotifications    Boolean  @default(true)
  language             String   @default("FR")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Notification {
  id             String           @id @default(uuid())
  userId         String
  type           NotificationType
  title          String
  body           String
  data           Json?
  contentType    ContentType?
  contentId      String?
  imageUrl       String?
  isRead         Boolean          @default(false)
  readAt         DateTime?
  isSent         Boolean          @default(false)
  sentAt         DateTime?
  deliveryStatus DeliveryStatus   @default(PENDING)
  failureReason  String?          @db.Text
  createdAt      DateTime         @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model NotificationLog {
  id              String   @id @default(uuid())
  announcementId  String?
  articleId       String?
  totalRecipients Int
  successCount    Int      @default(0)
  failureCount    Int      @default(0)
  sentBy          String
  sentAt          DateTime @default(now())
  fcmResponse     Json?
  createdAt       DateTime @default(now())

  // Relations
  organization Organization  @relation(fields: [sentBy], references: [id], onDelete: Cascade)
  announcement Announcement? @relation(fields: [announcementId], references: [id], onDelete: Cascade)
  article      Article?      @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@map("notification_logs")
}

model Bookmark {
  id          String      @id @default(uuid())
  userId      String
  contentType ContentType
  contentId   String
  createdAt   DateTime    @default(now())

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  announcement Announcement? @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_bookmark_announcement")
  article      Article?      @relation(fields: [contentId], references: [id], onDelete: Cascade, map: "fk_bookmark_article")

  @@unique([userId, contentType, contentId])
  @@map("bookmarks")
}

model AuditLog {
  id           String       @id @default(uuid())
  actorType    ActorType
  actorId      String
  action       ActionType
  resourceType ResourceType
  resourceId   String?
  changes      Json?
  metadata     Json?
  ipAddress    String?
  userAgent    String?
  status       AuditStatus  @default(SUCCESS)
  errorMessage String?      @db.Text
  createdAt    DateTime     @default(now())

  @@index([actorType, actorId])
  @@index([resourceType, resourceId])
  @@map("audit_logs")
}

model Report {
  id          String       @id @default(uuid())
  reportedBy  String
  contentType ContentType
  contentId   String
  reason      ReportReason
  description String?      @db.Text
  status      ReportStatus @default(PENDING)
  reviewedBy  String?
  reviewedAt  DateTime?
  resolution  String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  reporter User           @relation(fields: [reportedBy], references: [id], onDelete: Cascade)
  reviewer Administrator? @relation(fields: [reviewedBy], references: [id])

  @@map("reports")
}

model Session {
  id             String     @id @default(uuid())
  userType       UserType
  userId         String
  accessToken    String     @unique
  refreshToken   String     @unique
  fcmToken       String?
  ipAddress      String?
  userAgent      String?
  deviceType     DeviceType @default(WEB)
  isActive       Boolean    @default(true)
  expiresAt      DateTime
  lastActivityAt DateTime?
  createdAt      DateTime   @default(now())

  // Relations
  user          User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization  Organization?  @relation(fields: [userId], references: [id], onDelete: Cascade, map: "fk_Session_organization")
  administrator Administrator? @relation(fields: [userId], references: [id], onDelete: Cascade, map: "fk_Session_administrator")

  @@index([userType, userId])
  @@map("sessions")
}

model AnnouncementView {
  id             String   @id @default(uuid())
  announcementId String
  userId         String?
  ipAddress      String?
  userAgent      String?
  referrer       String?
  viewDuration   Int?
  createdAt      DateTime @default(now())

  // Relations
  announcement Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@index([announcementId])
  @@map("announcement_views")
}

model Statistic {
  id           String       @id @default(uuid())
  resourceType ResourceType
  resourceId   String
  date         DateTime     @db.Date
  views        Int          @default(0)
  uniqueViews  Int          @default(0)
  shares       Int          @default(0)
  comments     Int          @default(0)
  reactions    Int          @default(0)
  createdAt    DateTime     @default(now())

  // Relations
  announcement Announcement? @relation(fields: [resourceId], references: [id], onDelete: Cascade, map: "fk_statistic_announcement")
  article      Article?      @relation(fields: [resourceId], references: [id], onDelete: Cascade, map: "fk_statistic_article")

  @@unique([resourceType, resourceId, date])
  @@index([resourceType, resourceId])
  @@map("statistics")
}
