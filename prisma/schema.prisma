generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Ajoutez cette ligne
}

model User {
  id                     String                     @id @default(uuid())
  email                  String                     @unique
  password               String
  firstName              String?
  lastName               String?
  phone                  String?                    @unique
  avatar                 String?
  dateOfBirth            DateTime?
  gender                 Gender?
  city                   String?
  region                 String?
  isEmailVerified        Boolean                    @default(false)
  isPhoneVerified        Boolean                    @default(false)
  emailVerificationToken String?
  phoneVerificationToken String?
  passwordResetToken     String?
  passwordResetExpires   DateTime?
  fcmTokens              String[]                   @default([])
  hashedRefreshToken String?
  lastLoginAt            DateTime?
  lastLoginIp            String?
  status                 UserStatus                 @default(ACTIVE)
  deletedAt              DateTime?
  createdAt              DateTime                   @default(now())
  updatedAt              DateTime                   @updatedAt
  registrations          AnnouncementRegistration[]
  bookmarks              Bookmark[]
  comments               Comment[]
  notifications          Notification[]
  reactions              Reaction[]
  reports                Report[]
  sessions               Session[]
  preference             UserPreference?

  @@map("users")
}

model Organization {
  id                 String                   @id @default(uuid())
  name               String
  email              String                   @unique
  password           String
  type               OrganizationType
  phone              String
  whatsapp           String?
  logo               String?
  coverImage         String?
  description        String?
  website            String?
  address            String
  city               String
  region             String
  latitude           Decimal?                 @db.Decimal(10, 8)
  longitude          Decimal?                 @db.Decimal(11, 8)
  registrationNumber String                   @unique
  licenseDocument    String?
  isVerified         Boolean                  @default(false)
  verifiedAt         DateTime?
  verifiedBy         String?
  openingHours       Json?
  emergencyAvailable Boolean                  @default(false)
  insuranceAccepted  String[]                 @default([])
  rating             Decimal?                 @db.Decimal(2, 1)
  totalReviews       Int                      @default(0)
  totalAnnouncements Int                      @default(0)
  totalArticles      Int                      @default(0)
  fcmTokens          String[]                 @default([])
  lastLoginAt        DateTime?
  lastLoginIp        String?
  status             OrganizationStatus       @default(PENDING)
  suspensionReason   String?
  suspendedAt        DateTime?
  suspendedBy        String?
  deletedAt          DateTime?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  search_vector      Unsupported("tsvector")?
  advices            Advice[]
  announcements      Announcement[]
  articles           Article[]
  notificationLogs   NotificationLog[]
  members            OrganizationMember[]
  permissions        OrganizationPermission[]
  services           OrganizationService[]
  suspender          Administrator?           @relation("OrganizationSuspender", fields: [suspendedBy], references: [id])
  verifier           Administrator?           @relation("OrganizationVerifier", fields: [verifiedBy], references: [id])
  sessions           Session[]

  @@index([latitude, longitude])
  @@index([status, type])
  @@index([search_vector], map: "idx_org_search_vector", type: Gin)
  @@map("organizations")
}

model OrganizationMember {
  id             String       @id @default(uuid())
  organizationId String
  firstName      String
  lastName       String
  email          String
  phone          String?
  position       String?
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, email])
  @@map("organization_members")
}

model OrganizationPermission {
  id             String             @id @default(uuid())
  organizationId String
  resource       PermissionResource
  actions        PermissionAction[]
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  organization   Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, resource])
  @@map("organization_permissions")
}

model Administrator {
  id                     String                    @id @default(uuid())
  email                  String                    @unique
  password               String
  firstName              String
  lastName               String
  phone                  String?
  avatar                 String?
  role                   AdminRole                 @default(MODERATOR)
  isActive               Boolean                   @default(true)
  lastLoginAt            DateTime?
  lastLoginIp            String?
  createdBy              String?
  status                 AdminStatus               @default(ACTIVE)
  deletedAt              DateTime?
  createdAt              DateTime                  @default(now())
  updatedAt              DateTime                  @updatedAt
  permissions            AdministratorPermission[]
  creator                Administrator?            @relation("AdminCreator", fields: [createdBy], references: [id])
  createdAdmins          Administrator[]           @relation("AdminCreator")
  suspendedOrganizations Organization[]            @relation("OrganizationSuspender")
  verifiedOrganizations  Organization[]            @relation("OrganizationVerifier")
  reviewedReports        Report[]
  sessions               Session[]

  @@map("administrators")
}

model AdministratorPermission {
  id              String                  @id @default(uuid())
  administratorId String
  resource        AdminPermissionResource
  actions         AdminPermissionAction[]
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt
  administrator   Administrator           @relation(fields: [administratorId], references: [id], onDelete: Cascade)

  @@unique([administratorId, resource])
  @@map("administrator_permissions")
}

model AdminRoleTemplate {
  id          String    @id @default(uuid())
  role        AdminRole @unique
  name        String
  description String
  permissions Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("admin_role_templates")
}

model Category {
  id                 String         @id @default(uuid())
  name               String         @unique
  slug               String?        @unique
  description        String?
  icon               String?
  color              String?
  parentId           String?
  order              Int            @default(0)
  isActive           Boolean        @default(true)
  announcementsCount Int            @default(0)
  articlesCount      Int            @default(0)
  advicesCount       Int            @default(0)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  advices            Advice[]
  announcements      Announcement[]
  articles           Article[]
  parent             Category?      @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children           Category[]     @relation("CategoryHierarchy")

  @@map("categories")
}

model Specialty {
  id          String                @id @default(uuid())
  name        String                @unique
  slug        String?               @unique
  description String?
  icon        String?
  isActive    Boolean               @default(true)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  services    OrganizationService[]

  @@map("specialties")
}

model OrganizationService {
  id                  String       @id @default(uuid())
  organizationId      String
  specialtyId         String
  name                String
  description         String?
  isAvailable         Boolean      @default(true)
  estimatedCost       String?
  duration            String?
  requiresAppointment Boolean      @default(false)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  organization        Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  specialty           Specialty    @relation(fields: [specialtyId], references: [id])

  @@map("organization_services")
}

model Announcement {
  id                   String                     @id @default(uuid())
  organizationId       String
  categoryId           String
  title                String
  slug                 String?                    @unique
  content              String
  excerpt              String?
  featuredImage        String
  thumbnailImage       String?
  startDate            DateTime
  endDate              DateTime
  targetAudience       TargetAudience[]
  isFree               Boolean                    @default(true)
  cost                 Decimal?                   @db.Decimal(10, 2)
  capacity             Int?
  registeredCount      Int                        @default(0)
  requiresRegistration Boolean                    @default(false)
  viewsCount           Int                        @default(0)
  sharesCount          Int                        @default(0)
  commentsCount        Int                        @default(0)
  reactionsCount       Int                        @default(0)
  notificationsSent    Int                        @default(0)
  isPinned             Boolean                    @default(false)
  publishedAt          DateTime?
  status               AnnouncementStatus         @default(DRAFT)
  suspensionReason     String?
  suspendedBy          String?
  deletedAt            DateTime?
  createdAt            DateTime                   @default(now())
  updatedAt            DateTime                   @updatedAt
  priority             Priority?                  @default(LOW)
  search_vector        Unsupported("tsvector")?
  registrations        AnnouncementRegistration[]
  views                AnnouncementView[]
  category             Category                   @relation(fields: [categoryId], references: [id])
  organization         Organization               @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  bookmarks            Bookmark[]
  comments             Comment[]
  location             Location?
  media                Media[]
  notificationLogs     NotificationLog[]
  reactions            Reaction[]                  @relation("ReactionAnnouncement")
  statistics           Statistic[]

  @@index([status, publishedAt])
  @@index([categoryId, status])
  @@index([organizationId, status])
  @@index([isPinned, publishedAt])
  @@index([search_vector], map: "idx_announcements_search_vector", type: Gin)
  @@map("announcements")
}

model AnnouncementRegistration {
  id                 String             @id @default(uuid())
  announcementId     String
  userId             String?
  visitorName        String?
  visitorPhone       String?
  visitorEmail       String?
  status             RegistrationStatus @default(PENDING)
  confirmedAt        DateTime?
  cancelledAt        DateTime?
  cancellationReason String?
  attendedAt         DateTime?
  notes              String?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  deviceId           String?
  announcement       Announcement       @relation(fields: [announcementId], references: [id], onDelete: Cascade)
  user               User?              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([announcementId, userId])
  @@unique([announcementId, deviceId])
  @@index([announcementId, status])
  @@map("announcement_registrations")
}

model Article {
  id               String                   @id @default(uuid())
  organizationId   String
  categoryId       String
  title            String
  slug             String?                  @unique
  content          String
  excerpt          String?
  featuredImage    String
  thumbnailImage   String?
  author           String?
  readingTime      Int?
  tags             String[]                 @default([])
  viewsCount       Int                      @default(0)
  sharesCount      Int                      @default(0)
  commentsCount    Int                      @default(0)
  reactionsCount   Int                      @default(0)
  isFeatured       Boolean                  @default(false)
  publishedAt      DateTime?
  status           ArticleStatus            @default(DRAFT)
  suspensionReason String?
  suspendedBy      String?
  deletedAt        DateTime?
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt
  search_vector    Unsupported("tsvector")?
  category         Category                 @relation(fields: [categoryId], references: [id])
  organization     Organization             @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  bookmarks        Bookmark[]
  comments         Comment[]
  media            Media[]
  notificationLogs NotificationLog[]
  reactions        Reaction[]     @relation("ReactionArticle")
  statistics       Statistic[]

  @@index([status, publishedAt])
  @@index([organizationId, status])
  @@index([slug])
  @@index([search_vector], map: "idx_articles_search_vector", type: Gin)
  @@map("articles")
}

model Advice {
  id             String           @id @default(uuid())
  organizationId String
  categoryId     String
  title          String
  content        String
  icon           String?
  priority       Priority         @default(MEDIUM)
  targetAudience TargetAudience[]
  viewsCount     Int              @default(0)
  sharesCount    Int              @default(0)
  commentsCount  Int              @default(0)
  isActive       Boolean          @default(true)
  publishedAt    DateTime?
  status         AdviceStatus     @default(DRAFT)
  deletedAt      DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  reactionsCount Int              @default(0)
  search_vector Unsupported("tsvector")?
  category       Category         @relation(fields: [categoryId], references: [id])
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  reactions      Reaction[]      @relation("ReactionAdvice")
  comments       Comment[]
  bookmarks      Bookmark[]

  @@index([status, publishedAt])
  @@index([priority, status])
  @@index([organizationId, status])
  @@map("advices")
}

model Comment {
  id              String        @id @default(uuid())
  userId          String
  contentType     ContentType
  // On garde contentId uniquement si vous voulez l'utiliser pour d'autres types non reliés, 
  // mais il vaut mieux privilégier les colonnes ci-dessous pour la DB :
  contentId       String        

  content         String
  reactionsCount  Int           @default(0)
  repliesCount    Int           @default(0)
  isEdited        Boolean       @default(false)
  editedAt        DateTime?
  status          CommentStatus @default(VISIBLE)
  
  createdAt       DateTime      @default(now())
  deletedAt DateTime? // Ajoutez cette ligne
  updatedAt       DateTime      @updatedAt

  // ✅ Relations explicites pour éviter les conflits SQL
  announcementId  String?
  articleId       String?
  adviceId        String?

  advice          Advice?       @relation(fields: [adviceId], references: [id], onDelete: Cascade)
  parentCommentId String?

  // ✅ Mapping des relations
  announcement    Announcement? @relation(fields: [announcementId], references: [id], onDelete: Cascade)
  article         Article?      @relation(fields: [articleId], references: [id], onDelete: Cascade)
  parentComment   Comment?      @relation("CommentReplies", fields: [parentCommentId], references: [id], onDelete: Cascade)
  replies         Comment[]     @relation("CommentReplies")
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  reactions       Reaction[]     @relation("ReactionComment")

  @@index([announcementId])
  @@index([articleId])
  @@index([parentCommentId])
  @@index([adviceId])
  @@index([contentType, contentId]) // Gardé pour la compatibilité des requêtes rapides
  @@map("comments")
}

model Reaction {
  id             String       @id @default(uuid())
  userId         String
  type           ReactionType @default(LIKE)
  
  // Ajoutez cette ligne pour catégoriser la réaction
  contentType    ContentType  

  announcementId String?
  articleId      String?
  commentId      String?
  adviceId       String?

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relations
  announcement   Announcement? @relation("ReactionAnnouncement", fields: [announcementId], references: [id], onDelete: Cascade)
  article        Article?      @relation("ReactionArticle", fields: [articleId], references: [id], onDelete: Cascade)
  comment        Comment?       @relation("ReactionComment", fields: [commentId], references: [id], onDelete: Cascade)
  advice         Advice?        @relation("ReactionAdvice", fields: [adviceId], references: [id], onDelete: Cascade)
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Index uniques pour éviter les doublons
  @@unique([userId, announcementId])
  @@unique([userId, articleId])
  @@unique([userId, commentId])
  @@unique([userId, adviceId])
  @@map("reactions")
}

model Location {
  id               String       @id @default(uuid())
  contentType      ContentType
  contentId        String       @unique
  address          String
  city             String
  region           String
  latitude         Decimal      @db.Decimal(10, 8)
  longitude        Decimal      @db.Decimal(11, 8)
  placeId          String?
  formattedAddress String?
  additionalInfo   String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  announcement     Announcement @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@map("locations")
}

model Media {
  id                 String        @id @default(uuid())
  uploadedBy         String
  contentType        ContentType
  contentId          String?
  fileName           String
  originalFileName   String
  mimeType           String
  fileSize           Int
  url                String
  thumbnailUrl       String?
  width              Int?
  height             Int?
  cloudinaryPublicId String
  status             MediaStatus   @default(ACTIVE)
  deletedAt          DateTime?
  createdAt          DateTime      @default(now())
  uploaderType       UserType
  announcement Announcement? @relation(fields: [contentId], references: [id], map: "media_announcement")
  article      Article?      @relation(fields: [contentId], references: [id], map: "media_article")


  @@index([uploadedBy, uploaderType])
  @@map("media")
}

model UserPreference {
  id                   String   @id @default(uuid())
  userId               String   @unique
  categories           String[] @default([])
  organizations        String[] @default([])
  cities               String[] @default([])
  regions              String[] @default([])
  notificationsEnabled Boolean  @default(true)
  emailNotifications   Boolean  @default(true)
  pushNotifications    Boolean  @default(true)
  language             String   @default("FR")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Notification {
  id             String           @id @default(uuid())
  userId         String
  type           NotificationType
  title          String
  body           String
  data           Json?
  contentType    ContentType?
  contentId      String?
  imageUrl       String?
  isRead         Boolean          @default(false)
  readAt         DateTime?
  isSent         Boolean          @default(false)
  sentAt         DateTime?
  deliveryStatus DeliveryStatus   @default(PENDING)
  failureReason  String?
  createdAt      DateTime         @default(now())
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@map("notifications")
}

model NotificationLog {
  id              String        @id @default(uuid())
  announcementId  String?
  articleId       String?
  totalRecipients Int
  successCount    Int           @default(0)
  failureCount    Int           @default(0)
  sentBy          String
  sentAt          DateTime      @default(now())
  fcmResponse     Json?
  createdAt       DateTime      @default(now())
  announcement    Announcement? @relation(fields: [announcementId], references: [id], onDelete: Cascade)
  article         Article?      @relation(fields: [articleId], references: [id], onDelete: Cascade)
  organization    Organization  @relation(fields: [sentBy], references: [id], onDelete: Cascade)

  @@map("notification_logs")
}

model Bookmark {
  id             String      @id @default(uuid())
  userId         String
  contentType    ContentType
  createdAt      DateTime    @default(now())

  // ✅ On utilise uniquement ces colonnes pour les relations
  announcementId String?
  articleId      String?
  adviceId       String?

  advice         Advice?       @relation(fields: [adviceId], references: [id], onDelete: Cascade)

  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  announcement   Announcement? @relation(fields: [announcementId], references: [id], onDelete: Cascade, map: "bookmark_announcement_fkey")
  article        Article?      @relation(fields: [articleId], references: [id], onDelete: Cascade, map: "bookmark_article_fkey")

  // ✅ Mise à jour de l'index unique pour refléter la nouvelle structure
  @@unique([userId, contentType, announcementId])
  @@unique([userId, contentType, articleId])
  
  @@index([userId, contentType])
  @@index([userId, createdAt])
  @@unique([userId, contentType, adviceId])
  @@map("bookmarks")
}

model AuditLog {
  id           String       @id @default(uuid())
  actorType    ActorType
  actorId      String
  action       ActionType
  resourceType ResourceType
  resourceId   String?
  changes      Json?
  metadata     Json?
  ipAddress    String?
  userAgent    String?
  status       AuditStatus  @default(SUCCESS)
  errorMessage String?
  createdAt    DateTime     @default(now())

  @@index([actorType, actorId])
  @@index([resourceType, resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

model Report {
  id          String         @id @default(uuid())
  reportedBy  String
  contentType ContentType
  contentId   String
  reason      ReportReason
  description String?
  status      ReportStatus   @default(PENDING)
  reviewedBy  String?
  reviewedAt  DateTime?
  resolution  String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  reporter    User           @relation(fields: [reportedBy], references: [id], onDelete: Cascade)
  reviewer    Administrator? @relation(fields: [reviewedBy], references: [id])

  @@map("reports")
}

model Session {
  id              String         @id @default(uuid())
  userType        UserType
  userId          String?
  accessToken     String         @unique
  refreshToken    String         @unique
  fcmToken        String?
  ipAddress       String?
  userAgent       String?
  deviceType      DeviceType     @default(WEB)
  isActive        Boolean        @default(true)
  expiresAt       DateTime
  lastActivityAt  DateTime?
  createdAt       DateTime       @default(now())
  administratorId String?
  organizationId  String?

  user          User?          @relation(fields: [userId], references: [id], map: "session_user")
  organization  Organization? @relation(fields: [userId], references: [id], map: "session_org")
  administrator Administrator? @relation(fields: [userId], references: [id], map: "session_admin")

  

  @@index([userType, userId])
  @@index([userType, organizationId])
  @@index([userType, administratorId])
  @@index([isActive, expiresAt])
  @@index([expiresAt])
  @@map("sessions")
}

model AnnouncementView {
  id             String       @id @default(uuid())
  announcementId String
  userId         String?
  ipAddress      String?
  userAgent      String?
  referrer       String?
  viewDuration   Int?
  createdAt      DateTime     @default(now())
  announcement   Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@index([announcementId])
  @@map("announcement_views")
}

model Statistic {
  id           String       @id @default(uuid())
  resourceType ResourceType
  resourceId   String
  date         DateTime     @db.Date
  views        Int          @default(0)
  uniqueViews  Int          @default(0)
  shares       Int          @default(0)
  comments     Int          @default(0)
  reactions    Int          @default(0)
  createdAt    DateTime     @default(now())

  // Relations corrigées
  announcement Announcement? @relation(fields: [resourceId], references: [id], map: "stat_announcement")
  article      Article?      @relation(fields: [resourceId], references: [id], map: "stat_article")

  @@unique([resourceType, resourceId, date])
  @@index([resourceType, resourceId])
  @@map("statistics")
}



