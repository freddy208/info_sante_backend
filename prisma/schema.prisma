enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum OrganizationType {
  HOSPITAL_PUBLIC
  HOSPITAL_PRIVATE
  CLINIC
  HEALTH_CENTER
  DISPENSARY
  MINISTRY
  NGO
  FOUNDATION
  RESEARCH_CENTER
}

enum OrganizationStatus {
  PENDING
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum Gender {
  MALE
  FEMALE
}

enum AnnouncementStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
